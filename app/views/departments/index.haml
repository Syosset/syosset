.page-wrapper
  %header.page-heading.clearfix
    .row
      .col-xs-12.col-sm-5
        %h1.heading-title.pull-left Departments
      .col-xs-12.col-sm-7
        = form_tag departments_path, method: :get do
          .input-group
            %input#search.form-control{:placeholder => "Search for Department", :type => "text", name: "search"}
            %span.input-group-btn
              = submit_tag "Search", :name => nil, class: "btn btn-default"
    .row
      = render partial: "partials/modtools", locals: {actions: @actions}
  .page-content
    .table-responsive
      %table.table
        %thead
          %tr
            %th
            %th Department Name
            %th Description
            %th Phone Number
        %tbody.rankable
          - @departments.each do |department|
            = content_tag_for(:tr, department) do
              %td
                - if current_holder.can?(:rank, :departments)
                  %i.handle.fa.fa-sort{"aria-hidden" => "true"}
              %td= link_to department.name, department
              %td= department.short_description
              %td= department.phone
    = paginate @departments, theme: 'tb3'
